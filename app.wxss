/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  font-family: 微软雅黑;
  box-sizing: border-box;
} 


.hs10 {
  height: 20rpx;
}

.hs20 {
  height: 40rpx;
}

.clear {
  display: block;
  clear: both;
  font-size: 2rpx;
  line-height: 2rpx;
  margin: 0;
  padding: 0;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size: 32rpx;
}

.main-body {
  margin: 40rpx;
  font-size: 28rpx;
  font-family: 微软雅黑;
}

.blank-char {
  color: #e4e4e4;
  font-size: 28rpx;
  padding: 0 10rpx;
}
