/* pages/menu/menu.wxss */
.top-bgimage {
   background-repeat: no-repeat;
   background-position: center;
   background-size: 100%; 
   background-color:#6fa6cf;
   height: 340rpx;
 }
.btn-new {
  background-color: #6fa6cf;
  border-radius: 7rpx; 
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  padding:0;
}
button::after {
border:1px solid rgba(0, 0, 0, 0);
}

.btn-new-hover {
  background-color: #5e81bf;
}

.list {
  border-top: 1px solid #eee;
  padding-top: 40rpx;
  margin-top: 40rpx;
  line-height: 50rpx;
}

.list-title {
  color: #5e81bf;
}

.list-date {
  font-size: 24rpx;
  color: #ccc;
  margin: 10rpx 0;
}

.list-date-week {
  padding-left: 20rpx;
}

.list-remark {
  color: #333;
}

.list-tag {
  color: #6fa6cf;
}

.list-image {
  width: 50%;
}
